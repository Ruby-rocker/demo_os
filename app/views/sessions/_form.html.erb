<% form_tag session_path, :id => 'login' do -%>
<ul>
  <li>
  	<%= label_tag 'login', 'Username*' %>
  	<%= text_field_tag 'login', @login, :class => 'required' %><br/>
  </li>
  <li>
  	<%= label_tag 'password', 'Password*' %>
  	<%= password_field_tag 'password', nil, :class => 'required' %><br/>
  </li>
  <li class="checkbox">
    <%= link_to "forgot your password?", new_password_path, :class => 'small' %><br/>
  </li>
  <li class="checkbox">
  	<%= check_box_tag 'remember_me', '1', @remember_me %>
  	<%= label_tag 'remember_me', 'remember me' %><br/>
  </li>
  <li>
  	<%= hidden_field_tag 'admin', controller.controller_name == 'admin', :class => 'hidden' %>
  	<%= submit_tag 'Sign In' %>
  </li>
</ul>
<% end -%>