<% form_for(@user, :html => { :multipart => true }) do |f| %>
<%= f.error_messages %>
<ul>
	<li>
		<%= f.label :login, 'Username*' %>
	  <%= f.text_field :login, :disabled => 'disabled' %><br/>
	</li>
	<li>
	  <%= f.label :email, 'Email*' %>
	  <%= f.text_field :email %><br/>
	</li>
</ul>
<br />
<ul>
	<li>
	  <%= f.label :name %>
	  <%= f.text_field :name %><br/>
	</li>
	<li>
	  <%= f.label :dob, "Birthday" %>
	  <%= f.text_field :dob, :value => (@user.dob.nil? ? '' : @user.dob.strftime('%x')) %><br/>
	</li>
	
	<li class="radioLabel">
	  <%= f.label 'gender_female', "Gender" %>
	</li>
	<li class="radio">
	  <%= f.radio_button :gender, "female" %>
	  <%= f.label 'gender_female', "Female" %>
	</li>
	<li class="radio">
	  <%= f.radio_button :gender, "male" %>
	  <%= f.label 'gender_male', "Male" %>
	</li>
</ul>
<br />
<ul>	
	<li>
	  <%= f.label :city %>
	  <%= f.text_field :city %><br/>
	</li>
	<li>
	  <%= f.label :state %>
	  <%= f.text_field :state %><br/>
	</li>
	<li>
	  <%= f.label :country %>
	  <%= f.text_field :country %><br/>
	</li>
	
</ul>
<br />
<ul>
	
	<li>
	  <%= f.label :password, 'Password' %>
	  <%= f.password_field :password %><br/>
	</li>
	<li>
	  <%= f.label :password_confirmation, 'Retype Password' %>
	  <%= f.password_field :password_confirmation %><br/>
	</li>
	
	<li>
		<span class="legend">* required fields</span>
	</li>
	
	<li class="buttons">
		<%= f.hidden_field :agreed, :value => true, :class => 'hidden' %>
		<%= f.hidden_field :ip_address, :value => request.remote_ip, :class => 'hidden' %>
		<%= submit_tag "save" %><br/>
	</li>
</ul>
<% end -%>
