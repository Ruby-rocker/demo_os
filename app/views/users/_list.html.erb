<ul class="archive">
	
	<% if @users.empty? %>
		
		<h3>There are no @users..</h3>
		
	<% else -%>

		<% @users.each do |user| %>
		
			<li>    
		    <ul class="items">  
		      <li class="title"><%= link_to user.login, user.link_path %></li>
		      <li><%= count_string(user.stories.length, 'stories') %></li>
		      <li>joined: <%= user.created_at.strftime('%B %d, %Y').gsub(/(\s0)/, ' ') %></li>
		      
		      <% if authorized? %>
			      <li>
			      	<%= link_to 'view', user.link_path %> /
			      	<%= link_to 'edit', edit_user_path(user) %> /
				    </li>
		  	    <li class="status">
		  	    	<%= user.active? ? "active" : "waiting for activation" %>
		  	    </li>
		      <% end -%>
		    </ul>
		  </li>
		  
		<% end -%>
	<% end -%>

</ul>